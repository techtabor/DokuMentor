    <h2>Jegyzet adatai</h2>    

    <div class="form-group">
    <label class="control-label col-sm-2" for="university">Egyetem:</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="university" placeholder="pl.: ELTE" name="university" list="universities" required>
        <span class="validity"></span>
    </div>
    <datalist id="universities">
        <option value="ELTE">
        <option value="BME">
        <option value="SZTE">
        <option value="DE">
        <option value="BCE">
    </datalist>
    </div>


    <div class="form-group">
    <label class="control-label col-sm-2" for="faculty">Kar:</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="faculty" placeholder="TTK" name="faculty">
    </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="department">Szak:</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="department" placeholder="Programtervező informatikus" name="department">
    </div>
    </div>
    

    <div class="form-group">
    <label class="control-label col-sm-2" for="semester">Félév:</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" id="semester" placeholder="1" name="semester">
    </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="course">Kurzus:</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="course" placeholder="Analízis 1" name="course">
    </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="files">Fájlok:</label>
    <div class="col-sm-10">
        <input type="file" class="form-control" id="files" name="files" multiple>
    </div>
    </div>
            

    <h2>Feltöltő adatai</h2>    
    <div class="form-group">
    <label class="control-label col-sm-2" for="name">Név:</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="name" placeholder="Kovács Béla" name="name">
    </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-10">
        <input type="email" class="form-control" id="email" placeholder="contact@dokumentor.hu" name="email">
    </div>
    </div>


    


